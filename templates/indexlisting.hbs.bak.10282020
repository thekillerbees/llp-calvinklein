         <script>
          $(document).ready(function(){
              $('#hamburgerMenu').on('click',function(){
                $('#linkContainer').slideToggle(300, function(){});
              });
            });
           $(window).resize(function(){
            if($(window).width() > 1074){
              if($('#linkContainer').is(':hidden')){
                $('#linkContainer').show();
              }
            } else if ($(window).width() < 1075) {
              if($('#linkContainer').is(':visible')){
                $('#linkContainer').hide();
              }
            }
          })
